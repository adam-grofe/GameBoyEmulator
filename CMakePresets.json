{
  "version": 3,
  "configurePresets": [
    {
      "name": "vcpkg",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        }
      }
    },
    {
      "name": "vcpkg-ci-1",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/b",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH", 
          "value": "C:\\Users\\User\\project\\GameBoyEmulator\\vcpkg/scripts/buildsystems/vcpkg.cmake"
        },
        "VCPKG_HOST_TRIPLET": "x64-windows-release",
        "VCPKG_TARGET_TRIPLET": "x64-windows-release"
      }
    },
    {
      "name": "vcpkg-ci-2",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/b",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH", 
          "value": "H:\\vcpkg/scripts/buildsystems/vcpkg.cmake"
        },
        "VCPKG_HOST_TRIPLET": "x64-windows-release",
        "VCPKG_TARGET_TRIPLET": "x64-windows-release",
	"VCPKG_INSTALL_OPTIONS": "--x-buildtrees-root=d"
      }
    },
    {
      "name": "vcpkg-docker",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH", 
          "value": "/opt/vcpkg/scripts/buildsystems/vcpkg.cmake"
        }
      }
    }
  ]
}
